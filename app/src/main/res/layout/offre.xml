<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/fond">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="89dp"
        android:src="@drawable/logobleu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_item_background">
    <TextView
        android:id="@+id/tvMissionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Nom de la Mission"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvMissionLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Position/Adresse"
        android:textColor="@color/white"
        android:drawableStart="@drawable/position"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/tvMissionSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Salaire horaire brut/net"
        android:textColor="@color/white"
        android:drawableStart="@drawable/euro"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/tvMissionType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:textSize="20sp"
        android:text="Type de mission"
        android:textColor="@color/white"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/tvMissionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="Description de l'offre ici : ..."
        android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">



        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Candidater"
            android:backgroundTint="#00BEB7"/>
    </LinearLayout>


</LinearLayout>
