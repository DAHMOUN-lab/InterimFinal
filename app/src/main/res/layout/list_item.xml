<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_item_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/tvMissionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Nom de la Mission"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvMissionLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Position/Adresse"
        android:textColor="@color/white"
        android:drawableStart="@drawable/position"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/tvMissionSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Salaire horaire brut/net"
        android:textColor="@color/white"
        android:drawableStart="@drawable/euro"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/tvMissionType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:textSize="20sp"
        android:text="Type de mission "
        android:textColor="@color/white"
        android:drawablePadding="8dp"/>

</LinearLayout>
